<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AdminUserUpdateFragment">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:text="Update Record for User"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/admin_user_update_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Insert Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/admin_user_update_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Insert Password"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/admin_user_update_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Insert Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/admin_user_update_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Insert Surname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/admin_user_update_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Insert Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/admin_user_update_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:hint="Insert Type"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/submitUserUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>