<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminUpdateFragment">


    <Button
        android:id="@+id/admin_user_update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_margin="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/admin_product_update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Product"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_user_update" />

    <Button
        android:id="@+id/admin_cart_update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cart"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_product_update" />

    <Button
        android:id="@+id/admin_sale_update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sale"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_cart_update" />
</androidx.constraintlayout.widget.ConstraintLayout>